<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme_FullScreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- Estilo para hacer la imagen circular -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">15sp</item>
    </style>
    <style name="ButtonTheme">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_style</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
