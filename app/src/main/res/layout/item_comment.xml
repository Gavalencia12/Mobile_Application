<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView android:id="@+id/section_reviews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/section_cards_3"
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            >

            <!-- Review card 1 -->
            <androidx.cardview.widget.CardView style="@style/card_info"
                android:id="@+id/card_review_1"
                android:backgroundTint="@color/blue_pressed">
                <!-- Review content layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:paddingHorizontal="10dp">

                    <ImageView
                        android:id="@+id/userImageView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@null"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_review" />

                    <RelativeLayout
                        android:id="@+id/Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Contenedor Horizontal para centrar -->
                        <LinearLayout
                            android:id="@+id/centeredLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="30dp"
                            android:orientation="horizontal">

                            <!-- Primer nombre -->
                            <TextView
                                android:id="@+id/firstNameText"
                                style="@style/title_dialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="perro"
                                android:textColor="@color/white" />

                            <!-- Espaciado entre los textos -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />

                            <!-- Apellido -->
                            <TextView
                                android:id="@+id/lastNameText"
                                style="@style/title_dialog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="dfjk"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/stars_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/Name"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nostar" />

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nostar" />

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nostar" />

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nostar" />

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nostar" />
                    </LinearLayout>

                    <!-- Texto de la reseÃ±a -->
                    <TextView
                        android:id="@+id/commentText"
                        style="@style/txt_footer"
                        android:layout_below="@id/stars_seller"
                        android:layout_marginTop="10dp"
                        android:maxLines="3"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="normal" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>


