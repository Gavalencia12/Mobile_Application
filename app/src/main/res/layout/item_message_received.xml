<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado de fecha -->
        <TextView
            android:id="@+id/dateHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Contenedor de mensajes y archivos -->
    <LinearLayout
        android:layout_below="@id/llHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp">

        <!-- Mensaje de texto -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:backgroundTint="@color/dark_blue"
            android:padding="8dp"
            android:maxWidth="260dp"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <!-- Contenedor para archivos con diseño similar a WhatsApp -->
        <LinearLayout
            android:id="@+id/fileContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_file_message"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:maxWidth="260dp"
            android:visibility="gone">

            <!-- Nombre del archivo -->
            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ArchivoEjemplo.txt"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <!-- Información adicional del archivo (tamaño y tipo) -->
            <TextView
                android:id="@+id/fileInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165 KB • TXT"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Vista de imagen para fotos -->
        <ImageView
            android:id="@+id/fileImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Vista de video para videos -->
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Botón de reintento de descarga -->
        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar descarga"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            android:padding="4dp" />

        <!-- Contenedor de hora y estado del mensaje -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="2dp">

            <!-- Hora del mensaje -->
            <TextView
                android:id="@+id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#8B8B8B"/>

            <!-- Icono de estado del mensaje -->
            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:src="@drawable/ic_sent" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
