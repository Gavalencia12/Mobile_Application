<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRecommendation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

    <!-- Icono de recomendación -->
    <ImageView
        android:id="@+id/ivRecommendationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:contentDescription="@string/recommendation_icon"
        app:tint="@color/teal_200" />

    <!-- Texto de la recomendación -->
    <TextView
        android:id="@+id/tvRecommendationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recomendación"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="26dp"/>
</LinearLayout>
    </FrameLayout>
